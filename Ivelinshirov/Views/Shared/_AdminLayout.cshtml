@using Services.Data
@inject ICategoryService categoryService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/jquery-ui.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="~/lib/jquery/jquery-ui.min.js"></script>
    <script src="~/js/sortable.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @foreach (var category in await categoryService.GetAll())
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-admin text-dark" asp-area="" asp-controller="Admin" asp-action="Index" asp-route-id="@category.Name">@category.Name.ToUpper()</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link nav-link-admin text-dark" asp-area="" asp-controller="Admin" asp-action="Biography">BIOGRAPHY</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-admin text-dark" asp-area="" asp-controller="Admin" asp-action="Categories">CATEGORIES</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-admin text-danger" asp-area="" asp-controller="Home" asp-action="Index">EXIT ADMIN PANEL</a>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Ivelin Shirov. Developed by Hristo Shirov.
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
