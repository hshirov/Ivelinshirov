@model IEnumerable<Data.Models.Artwork>
@{
    ViewData["Title"] = Model.FirstOrDefault().Category.Name;
}

<div class="row">
    @foreach (var artwork in Model)
    {
        <div class="col-md-4 col-sm-6 mb-5">
            <div class="col-md-12">
                <a href="~/images/artwork/@artwork.ImageName" data-lightbox="artwork" data-title="@artwork.Title">
                    <img src="~/images/artwork/@artwork.ImageName" class="artwork-item" alt="@artwork.Title" />
                </a>
            </div>
        </div>
    }
</div>

<script>
    lightbox.option({
        'showImageNumberLabel': false,
        'positionFromTop': 90,
        'resizeDuration': 500
    })
</script>
