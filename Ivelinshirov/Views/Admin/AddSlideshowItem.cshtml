@model Ivelinshirov.Models.AddSlideshowItemModel
@{
    ViewData["Title"] = "Add Slideshow Item";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSlideshowItem" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger" style="display: block"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary mr-1" />
                <a asp-action="Slideshow" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>