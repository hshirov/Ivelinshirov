@model Data.Models.Biography
@{
    ViewData["Title"] = "About";
}

<div class="row justify-content-md-center">
    <div class="col-md-3 col-sm-12 image-box mb-3">
        <img class="bio-image" src="~/images/bio_photo.png"/>
    </div>
    <div class="col-md-7">  
        @Html.Raw("<pre class='bio-text'>" + Html.Encode(Model.Text) + "</pre>")  
    </div>
</div>